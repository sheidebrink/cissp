                            <tbody>
                                <tr>
                                    <td><strong>7</strong></td>
                                    <td>Application</td>
                                    <td>User interface, network services</td>
                                    <td>HTTP, HTTPS, FTP, SMTP, DNS, DHCP</td>
                                    <td>Data</td>
                                </tr>
                                <tr>
                                    <td><strong>6</strong></td>
                                    <td>Presentation</td>
                                    <td>Data encryption, compression, translation</td>
                                    <td>SSL/TLS, JPEG, GIF, ASCII</td>
                                    <td>Data</td>
                                </tr>
                                <tr>
                                    <td><strong>5</strong></td>
                                    <td>Session</td>
                                    <td>Session management, dialog control</td>
                                    <td>NetBIOS, RPC, SQL sessions</td>
                                    <td>Data</td>
                                </tr>
                                <tr>
                                    <td><strong>4</strong></td>
                                    <td>Transport</td>
                                    <td>End-to-end delivery, error recovery</td>
                                    <td>TCP, UDP, SPX</td>
                                    <td>Segments</td>
                                </tr>
                                <tr>
                                    <td><strong>3</strong></td>
                                    <td>Network</td>
