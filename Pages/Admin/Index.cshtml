@page
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h1>Admin Dashboard</h1>
    
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Question Management</h5>
                    <p class="card-text">Add, edit, and manage CISSP exam questions</p>
                    <a href="/Admin/Questions" class="btn btn-primary">Manage Questions</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Search and manage user accounts</p>
                    <a href="/Admin/Users" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-4">
        <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
</div>